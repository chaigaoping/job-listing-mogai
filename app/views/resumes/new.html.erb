<div class="category-page col-md-8 col-md-offset-2">
<h3 class="text-center">Apply for <%= @job.title%></h3>
<br />
<p>
  <%= simple_form_for [@job, @resume] do |f| %>
      <%= f.input :content %>
      <%= f.input :attachment %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</p>
</div>
