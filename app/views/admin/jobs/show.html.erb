<div class="category-page col-md-10 col-md-offset-1">
<h3 class="text-center"><%= @job.title%></h3>
<br />
<p>
  <%= simple_format(@job.description) %>
  <br />
  <div class="text-center">
    <%= link_to("Edit", edit_admin_job_path(@job), class: "btn btn-primary ") %>
    <%= link_to("Delete", admin_job_path(@job), :method => :delete, :data => { :confirm => "Are you sure?" }, class: "btn btn-primary ") %>
    <% if @job.is_hidden %>
    <%= link_to("Public", publish_admin_job_path(@job), :method => :post, class: "btn btn-primary") %>
    <% else %>
    <%= link_to("Hide", publish_admin_job_path(@job), :method => :post, class: "btn btn-primary") %>
    <% end %>
  </div>
</p>
</div>
